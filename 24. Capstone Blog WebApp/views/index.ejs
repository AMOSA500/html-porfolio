<%- include('partials/header.ejs') %>

        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="text-center display-1">The Blog WebApp</div>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-md-12">
                    <h5>Recent blog posts</h5>
                </div>
            </div>
            <% if(locals.lastestPost) {%>
            <div class="row">
                <div class="col-md-12">
                    <div class="card mb-3">
                        <img src="images/blog1.jpg" alt="blog image">
                        <div class="card-body">
                            <p class="card-text text-primary h6"><%= lastestPost["formattedDate"]%></p>
                            <h4 class="card-title"><%= lastestPost["title"]%></h4>
                            <p class="card-text"><%= lastestPost["formattedContext"]%></p>
                            <p class="card-text"><small class="text-muted">Last updated <%= lastestPost["diff"]%></small></p>
                            <a href="/blog" class="btn btn-primary">Read More</a>
                        </div>
                    
                    </div>

                </div>
            </div>
            <%}%>
            <hr> 
          
            <div class="row">
                <div class="col-md-12">
                    <p class="display-4">All Posts</p>
                </div>
                
            </div> 
        
            <div class="row">
                <div class="col-md-1"><p class="btn btn-outline-primary">Design</p></div>
                <div class="col-md-1"><p class="btn btn-outline-success">Research</p></div>
                <div class="col-md-1"><p class="btn btn-outline-danger">Presentation</p></div>
            </div>
            <% if(locals.posts){%>
                <% posts.forEach(post => {%>
                    <div class="row" id="all_blog">
                        
                                <div class="col-md-4">
                                    <img src="images/blog1.jpg" class="float-start img-thumbnail" alt="blog image" >
                                </div>
                                <div class="col-md-8">
                                    <p class="card-text text-primary h6"><%= post["formattedDate"] %></p>
                                    <h4 class="card-title"><%= post["title"] %></h4>
                                    <p class="card-text"><%= post["formattedContext"] %></p>
                                    <p class="card-text"><small class="text-muted">Last updated <%= post["diff"] %></small></p>
                                    <a href="/blog" class="btn btn-light">Read More</a>
                                        
                                </div>
                            
                    </div>
                <%})%>
            <%}%>
        </div>
        
          
          

            
    
    <%- include('partials/footer.ejs') %>
